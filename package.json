{
  "name": "react-coordinate-input",
  "version": "1.0.0-beta",
  "description": "A masked input React component for latitude & longitude coordinates.",
  "author": {
    "name": "Justin Williams",
    "email": "justinwilliams42@gmail.com"
  },
  "license": "MIT",
  "repository": "nerdstep/react-coordinate-input",
  "main": "dist/index.umd.js",
  "module": "dist/index.es.js",
  "keywords": [
    "react",
    "masked",
    "coordinate",
    "location",
    "input",
    "latitude",
    "longitude",
    "decimal",
    "degrees",
    "dms",
    "geo"
  ],
  "files": [
    "dist"
  ],
  "scripts": {
    "lint": "eslint src",
    "test": "jest --env=jsdom",
    "test:ci": "cross-env CI=1 jest --no-cache --coverage",
    "test:watch": "yarn test --watch",
    "test:cover": "yarn test --coverage",
    "build": "rollup -c",
    "start": "rollup -c -w",
    "prepare": "yarn run build",
    "predeploy": "cd example && yarn install && yarn run build",
    "deploy": "gh-pages -d example/build",
    "coveralls": "npx minicat coverage/lcov.info | coveralls"
  },
  "dependencies": {
    "imask": "^6.0.5"
  },
  "peerDependencies": {
    "prop-types": "^15.0.0",
    "react": ">=16.9.0"
  },
  "devDependencies": {
    "@babel/core": "^7.11.4",
    "@babel/preset-env": "^7.11.0",
    "@babel/preset-react": "^7.10.4",
    "@rollup/plugin-babel": "^5.2.0",
    "@rollup/plugin-commonjs": "^15.0.0",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "@rollup/plugin-url": "^5.0.1",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^10.4.9",
    "babel-eslint": "^10.1.0",
    "coveralls": "^3.1.0",
    "cross-env": "^7.0.2",
    "eslint": "^7.7.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-config-standard-react": "^9.2.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.20.6",
    "eslint-plugin-react-hooks": "^4.1.0",
    "eslint-plugin-standard": "^4.0.1",
    "gh-pages": "^3.1.0",
    "jest": "^26.4.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "rollup": "^2.26.8",
    "rollup-plugin-filesize": "^9.0.2",
    "rollup-plugin-peer-deps-external": "^2.2.3"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "jest": {
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "transformIgnorePatterns": [
      "/node_modules/(?!imask)"
    ]
  }
}
