{
  "name": "react-coordinate-input",
  "version": "1.0.0",
  "description": "A masked input React component for latitude & longitude coordinates.",
  "author": {
    "name": "Justin Williams",
    "email": "justinwilliams42@gmail.com"
  },
  "license": "MIT",
  "repository": "nerdstep/react-coordinate-input",
  "main": "dist/index.umd.js",
  "module": "dist/index.es.js",
  "keywords": [
    "react",
    "masked",
    "coordinate",
    "location",
    "input",
    "latitude",
    "longitude",
    "decimal",
    "degrees",
    "dms",
    "geo"
  ],
  "files": [
    "dist"
  ],
  "scripts": {
    "lint": "eslint src",
    "test": "jest --env=jsdom",
    "test:watch": "yarn test --watch",
    "test:cover": "yarn test --coverage",
    "test:ci": "jest --no-cache --coverage",
    "build": "rollup -c",
    "start": "rollup -c -w",
    "prepare": "yarn run build"
  },
  "dependencies": {
    "imask": "^6.2.2"
  },
  "optionalDependencies": {
    "prop-types": ">=15.0.0"
  },
  "peerDependencies": {
    "react": ">=16.9.0"
  },
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@babel/eslint-parser": "^7.16.0",
    "@babel/preset-env": "^7.16.0",
    "@babel/preset-react": "^7.16.0",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-node-resolve": "^13.0.6",
    "@rollup/plugin-url": "^6.1.0",
    "@testing-library/jest-dom": "^5.15.0",
    "@testing-library/react": "^12.1.2",
    "eslint": "^8.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-config-standard-react": "^11.0.1",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.1",
    "eslint-plugin-react": "^7.26.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-standard": "^5.0.0",
    "jest": "^27.3.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rollup": "^2.59.0",
    "rollup-plugin-filesize": "^9.1.1",
    "rollup-plugin-peer-deps-external": "^2.2.4"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "jest": {
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "transformIgnorePatterns": [
      "/node_modules/(?!imask)"
    ]
  }
}
